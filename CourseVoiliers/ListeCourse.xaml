<Window x:Class="CourseVoiliers.ListeCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseVoiliers"
        mc:Ignorable="d"
        Title="ListeCourse" Height="350" Width="525">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="251" Margin="10,58,0,0" VerticalAlignment="Top" Width="497" ItemsSource="{Binding listCourses}" />
        <Button Content="Ajouter une nouvelle course" HorizontalAlignment="Left" Margin="351,18,0,0" VerticalAlignment="Top" Width="156" Click="Button_Click"/>
        <Label Content="Liste des courses&#xD;&#xA;" HorizontalAlignment="Left" Margin="194,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Retour au menu" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click_1"/>

    </Grid>
</Window>